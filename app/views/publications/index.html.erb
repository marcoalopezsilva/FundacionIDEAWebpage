<p id="notice"><%= notice %></p>

<section class="container-publications">


    <h1>Publicaciones en la base de datos</h1>

    <div class="table-max">

        <table class="table table-bordered table-hover">
          <thead >
            <tr class="bg-primary">
              <th>Título</th>
              <th>Tag</th>
              <th>Creado por</th>
              <th colspan="3">Acciones</th>
            </tr>
          </thead>
          <tbody>
            <% @publications.each do |publication| %>
              <tr>
                <td><%= publication.title %></td>
                <td><%= publication.tag %></td>
                <td><%= publication.user.email %></td>
                <td><%= link_to 'Mostrar', publication, class:"btn btn-info" %></td>
                <td><%= link_to 'Editar', edit_publication_path(publication), class:"btn btn-warning" %></td>
                <td><%= link_to 'Eliminar', publication, method: :delete, class:"btn btn-danger", data: { confirm: 'Estás seguro?' } %></td>
              </tr>
            <% end %>
          </tbody>
        </table>

    </div>

    <br>
    <%= link_to 'Nueva Publicación', new_publication_path, class:"btn btn-success" %>
    <br />

</section>
